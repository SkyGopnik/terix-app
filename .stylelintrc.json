{
  "extends": "stylelint-config-standard-scss",
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "scss/double-slash-comment-whitespace-inside": null,
    "selector-type-case": null,
    "no-descending-specificity": null,
    "selector-class-pattern": null,
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "custom-property-empty-line-before": null,
    "declaration-empty-line-before": null,
    "color-function-notation": null,
    "alpha-value-notation": null,
    "color-hex-length": null,
    "property-no-vendor-prefix": null,
    "value-keyword-case": [
      "lower",
      {
        "ignoreProperties": ["text-rendering"]
      }
    ],
    "order/properties-order": [
      "width",
      "min-width",
      "max-width",
      "height",
      "min-height",
      "max-height",

      "flex",
      "flex-flow",
      "flex-basis",
      "flex-grow",
      "flex-shrink",

      "margin",
      "margin-top",
      "margin-right",
      "margin-bottom",
      "margin-left",

      "padding",
      "padding-top",
      "padding-right",
      "padding-bottom",
      "padding-left",

      "position",
      "top",
      "right",
      "bottom",
      "left",

      "display",
      "align-content",
      "align-items",
      "align-self",
      "justify-content",
      "flex-direction",
      "flex-wrap",
      "gap",

      "vertical-align",

      "font",
      "font-family",
      "font-style",
      "font-weight",
      "font-size",
      "font-variant",
      "font-size-adjust",
      "font-stretch",
      "line-height",
      "letter-spacing",

      "tab-size",

      "text-shadow",
      "text-align",
      "text-align-last",
      "text-outline",
      "text-transform",
      "text-wrap",
      "text-overflow",
      "text-overflow-ellipsis",
      "text-overflow-mode",
      "text-decoration",
      "text-emphasis",
      "text-emphasis-color",
      "text-emphasis-style",
      "text-emphasis-position",
      "text-indent",
      "text-justify",

      "white-space",
      "word-spacing",
      "word-wrap",
      "word-break",

      "order",
      "box-sizing",
      "table-layout",
      "empty-cells",
      "caption-side",

      "nav-index",
      "nav-up",
      "nav-right",
      "nav-down",
      "nav-left",

      "list-style",
      "list-style-position",
      "list-style-type",
      "list-style-image",

      "quotes",
      "counter-reset",
      "counter-increment",

      "animation",
      "animation-name",
      "animation-duration",
      "animation-play-state",
      "animation-timing-function",
      "animation-delay",
      "animation-iteration-count",
      "animation-direction",

      "content",

      "cursor",
      "resize",
      "user-select",
      "pointer-events",

      "clip",
      "zoom",
      "float",
      "clear",
      "hyphens",

      "transform",
      "transform-origin",

      "border",
      "border-width",
      "border-style",
      "border-color",
      "border-top",
      "border-top-width",
      "border-top-style",
      "border-top-color",
      "border-right",
      "border-right-width",
      "border-right-style",
      "border-right-color",
      "border-bottom",
      "border-bottom-width",
      "border-bottom-style",
      "border-bottom-color",
      "border-left",
      "border-left-width",
      "border-left-style",
      "border-left-color",
      "border-radius",
      "border-top-left-radius",
      "border-top-right-radius",
      "border-bottom-right-radius",
      "border-bottom-left-radius",
      "border-image",
      "border-image-source",
      "border-image-slice",
      "border-image-width",
      "border-image-outset",
      "border-image-repeat",
      "border-spacing",
      "border-collapse",

      "outline",
      "outline-width",
      "outline-style",
      "outline-color",
      "outline-offset",

      "transition",
      "transition-delay",
      "transition-timing-function",
      "transition-duration",
      "transition-property",

      "overflow",
      "overflow-x",
      "overflow-y",

      "box-decoration-break",
      "box-shadow",

      "visibility",
      "opacity",

      "z-index",

      "color",
      "background",
      "background-color",
      "background-image",
      "background-repeat",
      "background-attachment",
      "background-position",
      "background-position-x",
      "background-position-y",
      "background-clip",
      "background-origin",
      "background-size"
    ]
  }
}
